<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/v_ncc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm nhà cung cấp"
        android:textSize="22sp"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã nhà cung cấp"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/etMaNCC"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên nhà cung cấp"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/etTenNCC"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="địa chỉ"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/etDiaChiNCC"
        />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Thêm"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:id="@+id/btnAddNCC"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Hủy"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:id="@+id/btnCancelNCC"
            />
    </LinearLayout>
</LinearLayout>